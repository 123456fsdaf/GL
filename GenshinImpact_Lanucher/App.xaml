<Application x:Class="GenshinImpact_Lanuncher.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:GenshinImpact_Lanuncher"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/WPFUI;component/Styles/Theme/Light.xaml  " />
                <ResourceDictionary Source="pack://application:,,,/WPFUI;component/Styles/WPFUI.xaml" />
                <ResourceDictionary Source="Style/WPF-UI.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="GenshinIcon">pack://application:,,,/Resources/#GenshinIcon</FontFamily>
            <ControlTemplate x:Key="ItemsControlStyle" TargetType="ItemsControl">
                <ScrollViewer x:Name="ScrollViewer" Padding="{TemplateBinding Padding}"  HorizontalScrollBarVisibility="auto" VerticalScrollBarVisibility="Auto">
                    <ItemsPresenter/>
                </ScrollViewer>
            </ControlTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
