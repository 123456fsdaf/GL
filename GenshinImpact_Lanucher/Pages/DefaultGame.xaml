<Page x:Class="GenshinImpact_Lanucher.Pages.DefaultGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GenshinImpact_Lanucher.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI"
      Title="DefaultGame" Background="Transparent" Foreground="{DynamicResource TextFillColorTertiaryBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <wpfui:Button  Grid.Row="1" HorizontalAlignment="Right" Icon="Play12" Content="开始游戏" VerticalAlignment="Bottom" Margin="0 0 10 10" Height="50" Padding="10" FontSize="20"
                       Command="{Binding StartGame}"/>
    </Grid>
</Page>
