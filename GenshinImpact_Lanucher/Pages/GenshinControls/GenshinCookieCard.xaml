<wpfui:Card  xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="GenshinImpact_Lanuncher.Pages.GenshinControls.GenshinCookieCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GenshinImpact_Lanuncher.Pages.GenshinControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <wpfui:CardControl VerticalAlignment="Center" HorizontalAlignment="Center" >
                <StackPanel >
                    <TextBlock 
                        Text="未检测到Cookie，请点击下面按钮去添加"
                        FontFamily="微软雅黑"
                        FontSize="25"/>
                    <wpfui:Button
                        Click="Button_Click"
                        VerticalAlignment="Center"
                        Margin="0 15 0 0"
                        HorizontalAlignment="Center" 
                        Content="Go!"
                        Icon="WebAsset20"/>
                </StackPanel>
            </wpfui:CardControl>
    </Grid>
</wpfui:Card>
